<apex:page showHeader="true" sidebar="true" controller="PublicMetricsController">
	<h1>Public Metrics</h1>

	<table>
		<thead>
			<tr>
				<th>Label</th>
				<th>Metric Name</th>
				<th>Value</th>
				<th>Unit</th>
			</tr>
		</thead>
		<tbody>
			<apex:repeat value="{!metrics}" var="metric">
					<tr>
						<td>{!metric.Label__c}</td>
						<td>{!metric.ShortName__c}</td>
						<td>{!metric.Result__c}</td>
						<td>{!metric.Unit__c}</td>
					</tr>
			</apex:repeat>
		</tbody>
	</table>
</apex:page>